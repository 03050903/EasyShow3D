<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_activity_show_model"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/app_name"
            app:navigationIcon="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/showLayout_fl_activity_show_model"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout">

    </FrameLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#77000000"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <Button
                android:id="@+id/right_btn_activity_show_model"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/ic_model_turn_left"/>

            <Button
                android:id="@+id/left_btn_activity_show_model"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:background="@mipmap/ic_model_turn_right"/>

            <TextView
                android:id="@+id/level_tv_activity_show_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="1.0倍"
                android:textColor="@color/colorAccent"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:max="20"
                android:progress="10"
                android:id="@+id/changeModelLevel_seekBar_activity_show_model"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/left_btn_activity_show_model"
                android:layout_toLeftOf="@+id/right_btn_activity_show_model"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/xMode_iv_activity_show_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@mipmap/ic_model_turn_x"/>
            <ImageView
                android:id="@+id/zoomMode_iv_activity_show_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@mipmap/ic_model_zoom"/>
            <ImageView
                android:id="@+id/zMode_iv_activity_show_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@mipmap/ic_model_turn_y"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
